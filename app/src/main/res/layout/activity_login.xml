<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <ImageView
        android:layout_width="@dimen/hieht_width180"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/hieht_width120"
        android:src="@drawable/logo"/>



    <EditText
        android:id="@+id/email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin32"
        android:layout_marginTop="@dimen/padding_margin8"
        android:layout_marginEnd="@dimen/padding_margin16"
        android:background="@drawable/rounded_rectangle_gray_light"
        android:digits=".@_0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:gravity="start|center_vertical"
        android:hint="@string/email_address"
android:textColor="@color/gray_dark"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_margin8"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/textsize16" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin32"
        android:layout_marginTop="@dimen/padding_margin16"
        android:layout_marginEnd="@dimen/padding_margin16"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/edt"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_rectangle_gray_light"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:padding="@dimen/padding_margin8"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/textsize16"
            />


        <ImageView
            android:id="@+id/hide_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_margin8"
            android:layout_marginEnd="@dimen/padding_margin32"
            android:src="@drawable/hide_password"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/show_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_margin8"
            android:layout_marginEnd="@dimen/padding_margin32"
            android:src="@drawable/show_password" />

    </RelativeLayout>

    <TextView
        android:id="@+id/sign_in_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin32"
        android:layout_marginTop="@dimen/padding_margin16"
        android:layout_marginEnd="@dimen/padding_margin16"
        android:background="@drawable/ripple"
        android:gravity="center"
        android:paddingTop="@dimen/padding_margin8"
        android:paddingBottom="@dimen/padding_margin8"
        android:paddingStart="@dimen/padding_margin48"
        android:textStyle="bold"
        android:paddingEnd="@dimen/padding_margin48"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize20" />
    <TextView
        android:id="@+id/forget_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_margin16"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_margin16"
        android:text="@string/forget_password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textsize16" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_margin16"
        android:padding="@dimen/padding_margin8">
        <TextView
            android:layout_width="@dimen/hieht_width120"
            android:layout_height="wrap_content"
                android:text="Facebook"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/padding_margin16"
            android:padding="@dimen/padding_margin8"
            android:drawablePadding="@dimen/padding_margin8"
            android:drawableStart="@drawable/ic_fb"/>
        <TextView
            android:layout_width="@dimen/hieht_width120"
            android:layout_height="wrap_content"
            android:text="Google"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/padding_margin16"
            android:padding="@dimen/padding_margin8"
            android:drawablePadding="@dimen/padding_margin8"
            android:drawableStart="@drawable/ic_google"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_margin24"
        android:layout_marginStart="@dimen/padding_margin8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:id="@+id/txt"
            android:padding="@dimen/padding_margin8"
            android:text="@string/create_account"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/textsize16" />
        <TextView
            android:id="@+id/signup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt"
            android:paddingTop="@dimen/padding_margin8"
            android:paddingBottom="@dimen/padding_margin8"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize16" />

    </RelativeLayout>

</LinearLayout>


