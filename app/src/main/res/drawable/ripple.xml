<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#0F9787" />
            <stroke
                android:width="1dp"
                android:color="#0F9787" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0F9787"
                android:endColor="#0F9787"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0F9787" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</selector>