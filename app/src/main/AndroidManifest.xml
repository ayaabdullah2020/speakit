<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.speakit.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentaion.ui.activities.SplashActivity"></activity>
        <activity android:name=".presentaion.ui.activities.SelectLangActivity" />
        <activity android:name=".presentaion.ui.activities.ForgetPasswordActivity" />
        <activity android:name=".presentaion.ui.activities.SignupActivity" />
        <activity android:name=".presentaion.ui.activities.LoginActivity" />
        <activity android:name=".presentaion.ui.activities.MainActivity" />
        <activity android:name=".presentaion.ui.activities.ChooseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>